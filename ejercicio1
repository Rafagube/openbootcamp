package Ejercicio1;

public class practica {
	
	public static void main(String[] args) {
		
		int total = 0;
		
		total= sum(6, 3, 9);
		
		System.out.println(total);
		
		Coche miCoche = new Coche();
		
		miCoche.incrPuertas();
		
		System.out.println(miCoche.puertas);
		
	}
	
	//Creamos la funcion sum que hará la suma 
	
	public static int sum(int a, int b, int c) {
		
		return (a + b + c );
	}
	
}

//Creamos la clase coche con el numero de puertas

class Coche {
	
	public int puertas = 3;
	
	//Ahora añadimos la funcion que incremente las puertas
	
	public void incrPuertas() {
		
		this.puertas++;
		
	}

}	
